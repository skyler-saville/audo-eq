# Environment variables template
# ============================================================================
# Audo_EQ Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ============================================================================

# Application Settings
# ----------------------------------------------------------------------------
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
AUDO_LOG_LEVEL=INFO

# Default output directory for mastered files
AUDO_OUTPUT_DIR=./output

# Default sample rate for internal processing (48kHz is optimal per Masterknecht)
AUDO_DEFAULT_SAMPLE_RATE=48000

# Processing Settings
# ----------------------------------------------------------------------------
# Default target LUFS for loudness normalization (-14 is common for streaming)
AUDO_DEFAULT_TARGET_LUFS=-14.0

# Limiter threshold in dB (typically -1.0 to -0.1)
AUDO_LIMITER_THRESHOLD=-1.0

# True-peak limiting mode (true/false)
AUDO_TRUE_PEAK_LIMITING=true

# Dithering bit depth for output (16, 24, or 32 for float)
AUDO_OUTPUT_BIT_DEPTH=24

# Performance Settings
# ----------------------------------------------------------------------------
# Number of CPU cores to use for parallel processing (0 = auto-detect)
AUDO_NUM_WORKERS=0

# Maximum memory (in MB) for audio buffer processing
AUDO_MAX_MEMORY_MB=4096

# Development & Debugging
# ----------------------------------------------------------------------------
# Enable debug visualizations (true/false) - creates spectrogram images
AUDO_DEBUG_VISUALIZE=false

# Path to debug output directory
AUDO_DEBUG_OUTPUT_DIR=./debug

# Test mode - uses synthetic audio for validation
AUDO_TEST_MODE=false

# Web Backend Settings (if applicable)
# ----------------------------------------------------------------------------
# FastAPI server settings
AUDO_WEB_HOST=127.0.0.1
AUDO_WEB_PORT=8000
AUDO_WEB_WORKERS=4

# Maximum file size for uploads (in MB)
AUDO_MAX_UPLOAD_SIZE=100

# CORS origins (comma-separated)
AUDO_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# External Service Integrations (Placeholders for future use)
# ----------------------------------------------------------------------------
# Optional: API key for music metadata services (MusicBrainz, etc.)
# AUDO_METADATA_API_KEY=your_api_key_here

# Optional: Cloud storage for presets (AWS S3, etc.)
# AUDO_PRESET_BUCKET_URL=https://your-bucket.s3.amazonaws.com/presets