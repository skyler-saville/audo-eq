# Networking
API_HOST=0.0.0.0
API_PORT=8000

# Uvicorn process model
UVICORN_WORKERS=1
UVICORN_LOG_LEVEL=info

# MinIO / S3-compatible storage
AUDO_EQ_STORAGE_ENABLED=true
AUDO_EQ_S3_ENDPOINT=minio:9000
AUDO_EQ_S3_ACCESS_KEY=minioadmin
AUDO_EQ_S3_SECRET_KEY=minioadmin
AUDO_EQ_S3_BUCKET=audo-eq-mastered
AUDO_EQ_S3_SECURE=false
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
# AUDO_EQ_S3_REGION=

# Optional Docker Compose metadata
# COMPOSE_PROJECT_NAME=audo-eq
# COMPOSE_PROFILES=
# COMPOSE_FILE=compose.yaml:compose.override.yaml

# Frontend integration (optional, used by `make frontend`)
AUDO_EQ_API_BASE_URL=http://127.0.0.1:8000
AUDO_EQ_FRONTEND_HOST=0.0.0.0
AUDO_EQ_FRONTEND_PORT=5000
